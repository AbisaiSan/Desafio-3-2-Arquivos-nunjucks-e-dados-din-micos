{% extends 'layout.njk' %}

  {%block main%}
  <div id="container">
    {{cursos.titleCurso}}
  </div>
  
  <section class="cards-content">
    <!--Stater-->
    <div class="card-card" id="starter">
      <div class="img-card">
        <img style="padding-left: 13%; padding-top: 15%;" src="https://storage.googleapis.com/golden-wind/bootcamp-launchbase/assets/starter.svg" alt="Starter">
      </div>
      <div class="content-card">
        <p>
          <strong>Torne-se um programador desejado</strong> no mercado com esses cursos gratuitos
        </p>
      </div>
      <div class="info-card">
        <p>7 Modúlos</p>
        <p class="card-price">Free</p>
      </div>
    </div>
    <!--Lauchbase-->
    <div class="card-card" id="launchbase">
      <div class="img-card">
        <img style="padding-left: 13%;" src="https://storage.googleapis.com/golden-wind/bootcamp-launchbase/assets/launchbase.svg" alt="Starter">
      </div>
      <div class="content-card">
        <p>
          <strong>Domine programação do zero</strong> e tenha acesso às melhores oportunidades do mercado
        </p>
      </div>
      <div class="info-card">
        <p>7 Modúlos</p>
        <p class="card-price">Pago</p>
      </div>
    </div>
    <!--Go Stack-->
    <div class="card-card" id="gostack">
      <div class="img-card">
        <img style="padding-left: 13%;padding-top: 15%;" src="https://storage.googleapis.com/golden-wind/bootcamp-launchbase/assets/gostack.svg" alt="Starter">
      </div>
      <div class="content-card">
        <p>
          <strong>Treinamento imersivo</strong> nas tecnologias mais modernas de desenvolvimento web e mobile
        </p>
      </div>
      <div class="info-card">
        <p>7 Modúlos</p>
        <p class="card-price">Pago</p>
      </div>
    </div>
  </section>

  <div class="modal-overlay-cursos">
    <div class="modal-curso">
      <a class="close-modal-curso">
        <i class="material-icons">close</i>
      </a>
      <a class="maximize-modal">
        <i class="material-icons">maximize</i>
      </a>
      <div class="modal-content-curso">
        <iframe src="" frameborder="0"></iframe>
      </div>
    </div>
  </div>

  {%endblock%}}
<script src="./js/conteudo.js"></script>
</body>

</html>